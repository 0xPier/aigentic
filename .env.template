# AI Consultancy Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=agentic_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/agentic_platform

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Security
SECRET_KEY="your_super_secret_jwt_key_change_this_in_production_minimum_32_characters_placeholder_deploy_ready"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys - Third Party Integrations
OPENAI_API_KEY="sk-placeholder-configure-via-ui-or-add-your-real-key-here"
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
STABILITY_API_KEY=your_stability_ai_api_key_here

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=production

# Subscription Limits
FREE_TIER_TASK_LIMIT=10
PREMIUM_TIER_TASK_LIMIT=100
ENTERPRISE_TIER_TASK_LIMIT=1000

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/app/uploads

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
